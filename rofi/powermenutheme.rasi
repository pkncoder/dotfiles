/*****----- Configuration -----*****/


/*****----- Global Properties -----*****/
@import                          "shared/colors.rasi"
@import                          "shared/fonts.rasi"

/*
USE_ICON=YES
*/

* {
    border-colour:               var(border-color);
    handle-colour:               var(foreground);
    background-colour:           var(background);
    background-color:           var(background);
    alternate-background:        var(background);
    foreground-colour:           var(foreground);
    normal-background:           var(background);
    normal-foreground:           var(foreground);
    urgent-background:           var(background);
    urgent-foreground:           var(background);
    active-background:           var(background);
    active-foreground:           var(background);
    selected-normal-background:  var(background);
    selected-urgent-background:  var(background);
    selected-urgent-foreground:  var(selected-foreground);
    selected-active-background:  var(background);
    selected-active-foreground:  var(selected-foreground);
    alternate-normal-background: var(selected-normal-background);
    alternate-normal-foreground: var(foreground);
    alternate-urgent-background: var(background);
    alternate-urgent-foreground: var(foreground);
    alternate-active-background: var(background);
    alternate-active-foreground: var(foreground);
}

/*****----- Main Window -----*****/
window {
    transparency:                "real";
    location:                    east;
    anchor:                      east;
    fullscreen:                  false;
    width:                       70px;
    x-offset:                    -5px;
    y-offset:                    0px;
    margin:                      0px;
    padding:                     0px;
    border:                      1px solid;
    border-radius:               10px;
    border-color:                @border-colour;
    cursor:                      "default";
    background-color:            @background;
}

/*****----- Main Box -----*****/
mainbox {
    enabled:                     true;
    padding:                     0px;
    background-color:            transparent;
    children:                    [ "listview" ];
}

/*****----- Listview -----*****/
listview {
    enabled:                     true;
    columns:                     1;
    lines:                       3;
    cycle:                       true;
    scrollbar:                   false;
    layout:                      vertical;
    spacing:                     0px;
    background-color:            transparent;
    cursor:                      "default";
    border-radius:               10px;
}

/*****----- Elements -----*****/
element {
    enabled:                     true;
    padding:                     10px;
    margin:                      0px;
    border:                      0px solid;
    border-color:                @border-colour;
    background-color:            transparent;
    text-color:                  @foreground;
    cursor:                      pointer;
}
element-text {
    font:                        "JetBrainsMono Nerd Font 20";
    background-color:            transparent;
    text-color:                  inherit;
    cursor:                      inherit;
    text-align:                  center;
    vertical-align:              0.5;
    horizontal-align:            0.4;
}

element normal.normal,
element alternate.normal {
    border-color:                @border-colour;
    background-color:            var(alternate-background);
    text-color:                  var(foreground);
}

element selected {
    background-color:            rgba(255, 255, 255, 0.5);
    text-color:                  var(selected-foreground);
}
